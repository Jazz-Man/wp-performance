<?xml version="1.0"?>
<psalm xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="https://getpsalm.org/schema/config"
       xsi:schemaLocation="https://getpsalm.org/schema/config"
       cacheDirectory="cache/psalm"
       serializer="igbinary"
       allowPhpStormGenerics="true"
       errorBaseline="psalm-baseline.xml"
       totallyTyped="true"
       phpVersion="7.4"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="cache"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <TooManyArguments>
            <errorLevel type="suppress">
                <referencedFunction name="apply_filters"/>
            </errorLevel>
        </TooManyArguments>
        <MissingClosureParamType>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </MissingClosureParamType>
        <MixedReturnStatement>
            <errorLevel type="suppress">
                <file name="src/helper.php"/>
            </errorLevel>
        </MixedReturnStatement>
        <MixedArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/Optimization/Update.php"/>
            </errorLevel>
        </MixedArgumentTypeCoercion>
    </issueHandlers>

    <stubs>
        <file name="vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"/>
    </stubs>
    <globals>
        <var name="wpdb" type="\wpdb"/>
        <var name="wp_query" type="\WP_Query"/>
        <var name="wp_rewrite" type="\WP_Rewrite"/>
        <var name="wp_version" type="string"/>
    </globals>
</psalm>
