{
    "name": "jazzman/wp-performance",
    "type": "wordpress-muplugin",
    "description": "wp-performance",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasyl Sokolyk",
            "email": "vsokolyk@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1",
        "jazzman/autoload-interface": "^0.3.1",
        "jazzman/custom-post-type": "^2.3",
        "jazzman/wp-app-config": "^2.1",
        "jazzman/wp-db-pdo": "^0.1.3",
        "symfony/web-link": "^5.3"
    },
    "require-dev": {
        "edgedesign/phpqa": "^1.25",
        "friendsofphp/php-cs-fixer": "@stable",
        "nette/neon": "@stable",
        "php-stubs/wp-cli-stubs": "^2.5",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "@stable",
        "roave/security-advisories": "dev-master",
        "roots/wordpress": "^5.8",
        "szepeviktor/phpstan-wordpress": "^0.7.7",
        "vimeo/psalm": "@stable"
    },
    "replace": {
        "phpmetrics/phpmetrics": "*",
        "sebastian/phpcpd": "*"
    },
    "autoload": {
        "psr-4": {
            "JazzMan\\Performance\\":"src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "vendor/wp/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "vendor/wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "vendor/wp/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "vendor/wp"
    },
    "scripts": {
        "clear-cache" : [
            "phpstan clear-result-cache",
            "psalm --clear-cache",
            "psalm --clear-global-cache"
        ],
        "generate-base-line": [
            "@phpmd -- --generate-baseline",
            "phpstan --generate-baseline",
            "psalm --set-baseline=psalm-baseline.xml"
        ],
        "phpqa": "phpqa",
        "phpmd": "phpmd . text phpmd.ruleset.xml --exclude \"build/,vendor/,cache/\"",
        "server": "php -S 0.0.0.0:8000 -t build"
    }
}
