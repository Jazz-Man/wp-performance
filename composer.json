{
    "name": "jazzman/wp-performance",
    "type": "wordpress-muplugin",
    "description": "wp-performance",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasyl Sokolyk",
            "email": "vsokolyk@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1",
        "jazzman/autoload-interface": "^0.3.1",
        "jazzman/custom-post-type": "^2.3",
        "jazzman/wp-app-config": "^2.1",
        "jazzman/wp-db-pdo": "^0.1.3",
        "symfony/web-link": "^5.3"
    },
    "require-dev": {
        "php-stubs/wordpress-stubs": "^5.8",
        "phpstan/extension-installer": "@stable",
        "roave/security-advisories": "dev-master",
        "roots/wordpress": "^5.8",
        "szepeviktor/phpstan-wordpress": "^0.7.7"
    },
    "replace": {
        "phpstan/phpstan": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "JazzMan\\Performance\\":"src"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "vendor/wp/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "vendor/wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "vendor/wp/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "vendor/wp"
    },
    "scripts": {
        "rm-cache" : [
            "tools/phpstan clear-result-cache",
            "tools/psalm --clear-cache",
            "tools/psalm --clear-global-cache"
        ],
        "init-baseline": [
            "@psalm --set-baseline=psalm-baseline.xml",
            "@phpstan-baseline",
            "@phpmd --generate-baseline"
        ],
        "update-baseline": [
            "@psalm --update-baseline=psalm-baseline.xml",
            "@phpstan-baseline",
            "@phpmd --update-baseline"
        ],
        "cs-check": [
            "@php-cs-fixer --dry-run"
        ],
        "cs-fix": [
            "@php-cs-fixer"
        ],
        "phpstan": "tools/phpstan --no-progress",
        "phpstan-baseline": "@phpstan --generate-baseline=phpstan-baseline.neon",
        "phpmd": "tools/phpmd . text phpmd.ruleset.xml --exclude \"cache/,vendor/\"",
        "psalm": "tools/psalm --config=psalm.xml --show-info=true --stats --no-progress",
        "psalm-phpstorm": "@psalm --output-format=phpstorm",
        "server": "php -S 0.0.0.0:8000 -t build",
        "php-cs-fixer": "tools/php-cs-fixer fix -v --diff"
    }
}
